{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@design-system/*": ["packages/design-system/src/*"],
      "@theme/*": ["packages/design-system/src/theme/*"],
      "@lib/*": ["apps/admin-panel/src/lib/*"],
      "@services/*": ["apps/admin-panel/src/services/*"],
      "@types/*": ["apps/admin-panel/src/types/*"]
    }
  }
}
