"use client";
import React, { useEffect, useState } from 'react';
import { X } from 'lucide-react';
import { Label } from '../../atoms/Label/Label';
import './Modal.scss';

interface ModalProps {
  isOpen: boolean;
  onClose: () => void;
  title: string;
  children: React.ReactNode;
  footer?: React.ReactNode;
  /**
   * Ø³Ø§ÛŒØ² Ù…ÙˆØ¯Ø§Ù„
   * @default 'md'
   */
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

export const Modal = ({ 
  isOpen, 
  onClose, 
  title, 
  children, 
  footer, 
  size = 'md' 
}: ModalProps) => {
  const [isVisible, setIsVisible] = useState(false); // Ø¢ÛŒØ§ Ø¯Ø± DOM Ø±Ù†Ø¯Ø± Ø´ÙˆØ¯ØŸ
  const [isAnimateIn, setIsAnimateIn] = useState(false); // Ø¢ÛŒØ§ Ú©Ù„Ø§Ø³â€ŒÙ‡Ø§ÛŒ ÙˆØ±ÙˆØ¯ Ø§Ø¹Ù…Ø§Ù„ Ø´ÙˆØ¯ØŸ

  // Ù…Ø¯ÛŒØ±ÛŒØª Ú†Ø±Ø®Ù‡ Ø­ÛŒØ§Øª Ø§Ù†ÛŒÙ…ÛŒØ´Ù†
  useEffect(() => {
    if (isOpen) {
      setIsVisible(true);
      // ÛŒÚ© ØªØ§Ø®ÛŒØ± Ú©ÙˆÚ†Ú© Ø¨Ø±Ø§ÛŒ Ø§ÛŒÙ†Ú©Ù‡ Ù…Ø±ÙˆØ±Ú¯Ø± Ø±Ù†Ø¯Ø± Ø§ÙˆÙ„ÛŒÙ‡ Ø±Ø§ Ø§Ù†Ø¬Ø§Ù… Ø¯Ù‡Ø¯ Ùˆ Ø§Ù†ÛŒÙ…ÛŒØ´Ù† CSS Ø§Ø¬Ø±Ø§ Ø´ÙˆØ¯
      requestAnimationFrame(() => {
        setIsAnimateIn(true);
      });
      document.body.style.overflow = 'hidden';
    } else {
      setIsAnimateIn(false);
      document.body.style.overflow = 'unset';
      // ØµØ¨Ø± Ù…ÛŒâ€ŒÚ©Ù†ÛŒÙ… ØªØ§ Ø§Ù†ÛŒÙ…ÛŒØ´Ù† Ø®Ø±ÙˆØ¬ (300ms) ØªÙ…Ø§Ù… Ø´ÙˆØ¯
      const timer = setTimeout(() => {
        setIsVisible(false);
      }, 300);
      return () => clearTimeout(timer);
    }
  }, [isOpen]);

  // Ø¨Ø³ØªÙ† Ø¨Ø§ Ø¯Ú©Ù…Ù‡ Escape
  useEffect(() => {
    const handleEsc = (e: KeyboardEvent) => {
      if (e.key === 'Escape' && isOpen) onClose();
    };
    window.addEventListener('keydown', handleEsc);
    return () => window.removeEventListener('keydown', handleEsc);
  }, [isOpen, onClose]);

  if (!isVisible) return null;

  return (
    <div 
      className={`modal-overlay ${isAnimateIn ? 'modal-overlay--open' : ''}`} 
      onClick={onClose}
      role="dialog"
      aria-modal="true"
    >
      <div className="modal-backdrop" />
      
      <div 
        className={`modal-container modal-container--${size} ${isAnimateIn ? 'modal-container--open' : ''}`}
        onClick={(e) => e.stopPropagation()} // Ø¬Ù„ÙˆÚ¯ÛŒØ±ÛŒ Ø§Ø² Ø¨Ø³ØªÙ† Ù‡Ù†Ú¯Ø§Ù… Ú©Ù„ÛŒÚ© Ø±ÙˆÛŒ Ù…Ø­ØªÙˆØ§
      >
        <div className="modal-header">
          <Label weight="extra-bold" size="sm" className="modal-title">{title}</Label>
          <button onClick={onClose} className="modal-close-btn" aria-label="Ø¨Ø³ØªÙ†">
            <X size={20} />
          </button>
        </div>
        
        <div className="modal-content custom-scrollbar">
          {children}
        </div>
        
        {footer && (
          <div className="modal-footer">
            {footer}
          </div>
        )}
      </div>
    </div>
  );
};

