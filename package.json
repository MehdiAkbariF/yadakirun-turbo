{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "storybook": "npm run storybook -w @monorepo/design-system"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@11.3.0",
  "overrides": {
    "vite": "^5.2.0",
    "esbuild": "^0.20.0"
  },
  "dependencies": {
    "cookie": "^1.0.2"
  }
}
