{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test:design": "npm run test -w @monorepo/design-system"
  },
  "devDependencies": {
    "@vitest/ui": "1.6.1",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@11.3.0",
  "overrides": {
    "vite": "^5.2.0",
    "esbuild": "0.21.5",
    "@vitest/ui": "1.6.1",
    "vitest": "1.6.1"
  }
}
